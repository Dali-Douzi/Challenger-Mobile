<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText for Scrim Time -->
    <EditText
        android:id="@+id/scrimTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Scrim Time"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <!-- EditText for Scrim Date -->
    <EditText
        android:id="@+id/scrimDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Scrim Date"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/scrimTime"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <!-- Button to Post Scrim -->
    <Button
        android:id="@+id/postScrimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Scrim"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/scrimDate"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
